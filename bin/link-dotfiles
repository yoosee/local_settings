#!/usr/bin/ruby
#

require 'fileutils'

origin_dir = File.join(Dir.home,"local/config")
target_dir = Dir.home

Dir.open(origin_dir).each do |f|
  src  = "#{origin_dir}/#{f.to_s}"
  if File.file? src
    dest = "#{target_dir}/.#{f.to_s}"
    if File.exist? dest
      puts "#{dest} already exists. skipping."
    else
      puts "ln -s #{src} #{dest}"
      FileUtils.ln_s(src, dest)
    end
  end
end



set realname="Yoshinori Ikarashi"

#set alias_file = ~/.mutt/aliases
set postpone=ask-no

set include
set copy
set nosmart_wrap
set nomarkers

set delete = ask-yes
set print = ask-yes
set sort_aux = date-received

set edit_headers

auto_view text/html
alternative_order text/plain text/enriched text/html

source ~/.mutt_mailboxes

source ~/.mutt/headers
